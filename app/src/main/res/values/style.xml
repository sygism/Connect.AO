        <item name="android:textSize">@dimen/title_size_1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="title_text_2">
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/def_darker_orange</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="nc_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/vermilion_red</item>
        <item name="android:textSize">@dimen/title_size_1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="body_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/def_darker_orange</item>
